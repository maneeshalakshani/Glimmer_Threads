<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_centerHorizontal="true"
android:layout_margin="0dp"
android:layout_marginTop="20dp"
android:background="#00E91E63"
android:fitsSystemWindows="true"
tools:context=".Bus"
tools:openDrawer="start">

<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/nav_view"
    app:headerLayout="@layout/header"
    app:menu="@menu/menu"
    android:layout_gravity="start"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/imageView17"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/cart_icon" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/login_icon" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:background="@android:color/holo_green_dark" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="147dp"
            android:layout_height="110dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/glimmer_thread_logo" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#f4b3bb "
            android:gravity="center_horizontal"
            android:text="Glimmer Thread Offers"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="730dp"
            android:orientation="horizontal"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/Add_Discounts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Add Discount"
                    android:textColor="#020101"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/display_item_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/get_item_name"
                    android:text="Item Code"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/get_item_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/display_item_code"
                    android:hint="Enter Discount Code(Numbers)"

                    android:inputType="number"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/display_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Add_Discounts_title"
                    android:text="Discount Title"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/get_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/display_title"
                    android:hint="Enter Discount Title"
                    android:inputType="text"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/display_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/get_item_code"
                    android:text="Discount Amount"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/get_discount_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/display_discount"
                    android:hint="Enter Discount Amount"
                    android:inputType="number"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/button_get_discount"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/get_discount_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="#39b5db"
                    android:text="Add Discount"
                    android:textSize="20dp" />

                <!--<Button
                    android:id="@+id/imageUpload"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_btns"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#39b5db"
                    android:text="Image"
                    android:textSize="20dp"
                    android:onClick="InsertImage"/>


                <EditText
                    android:id="@+id/image_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageUpload"
                    android:hint="Enter Image Name"
                    android:inputType="number"
                    android:textSize="24dp" />-->


                <LinearLayout
                    android:id="@+id/view_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/delete_update_btns"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    tools:ignore="UnknownId">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/button_view_discount"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginHorizontal="5dp"
                                android:background="#7a7387"
                                android:text="View All"
                                android:textSize="20dp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/button_view_a_discount"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginHorizontal="5dp"
                                android:background="#7a7387"
                                android:text="View"
                                android:textSize="20dp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/delete_update_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_get_discount"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:paddingTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/button_update_discount"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginHorizontal="5dp"
                                android:background="#7be86b"
                                android:text="Update"
                                android:textSize="20dp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2sp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/button_delete_discount"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginHorizontal="5dp"
                                android:background="#F64646"
                                android:text="Delete"
                                android:textSize="20dp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>




            </RelativeLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>