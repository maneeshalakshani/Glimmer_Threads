<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_centerHorizontal="true"
android:layout_margin="0dp"
android:background="#00E91E63"
android:fitsSystemWindows="true"
tools:context=".Sales"
tools:openDrawer="start">

<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/nav_view"
    app:headerLayout="@layout/header"
    app:menu="@menu/menu"
    android:layout_gravity="start"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/imageView17"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/cart_icon" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/login_icon" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:background="@android:color/holo_green_dark" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="147dp"
            android:layout_height="110dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/glimmer_thread_logo" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#f4b3bb "
            android:gravity="center_horizontal"
            android:text="Glimmer Thread Offers"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <HorizontalScrollView
                android:id="@+id/HorizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:elevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/saree1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageView13"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Saree 1"
                                android:textSize="24sp" />

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:src="@drawable/saree" />

                            <Button
                                android:id="@+id/get_discount_1"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/saree1"
                                android:layout_centerHorizontal="true"
                                android:background="#DC0F79"
                                android:fontFamily="sans-serif-medium"
                                android:text="Get Discount"
                                android:textColor="#FFFFFF" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:elevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/saree2Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageView14"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Saree 1"
                                android:textSize="24sp" />

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:src="@drawable/saree" />

                            <Button
                                android:id="@+id/get_discount_2"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/saree2Text"
                                android:layout_centerHorizontal="true"
                                android:background="#DC0F79"
                                android:fontFamily="sans-serif-medium"
                                android:text="Get Discount"
                                android:textColor="#FFFFFF" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:elevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/sareeText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/saree3"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Saree 1"
                                android:textSize="24sp" />

                            <ImageView
                                android:id="@+id/saree3"
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:src="@drawable/saree" />


                            <Button
                                android:id="@+id/get_discount_3"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sareeText3"
                                android:layout_centerHorizontal="true"
                                android:background="#DC0F79"
                                android:fontFamily="sans-serif-medium"
                                android:text="Get Discount"
                                android:textColor="#FFFFFF" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/Connect_with_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Connect With Us"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Connect_with_us"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:labelFor="@id/imageView11"
                    app:srcCompat="@drawable/facebook_icon" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Connect_with_us"
                    android:layout_alignLeft="@id/imageView10"
                    android:layout_alignParentLeft="false"
                    android:layout_marginLeft="92dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/instagram_icon" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Connect_with_us"
                    android:layout_alignParentLeft="false"
                    android:layout_marginStart="59dp"
                    android:layout_marginLeft="316dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imageView11"
                    app:srcCompat="@drawable/play_store_icon" />
            </RelativeLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>